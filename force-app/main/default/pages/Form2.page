  // DIsable two link css 
  var disableStyle = function(styleName, disabled) {
          var styles = document.styleSheets;
          var href = "";
          for (var i = 0; i < styles.length; i++) {
            // href=style[i];
              href = styles[i].href.split("/");
              href = href[href.length - 1];
            if (href === styleName) {
                  styles[i].disabled = disabled;
                  break;
              }
          }
      };
